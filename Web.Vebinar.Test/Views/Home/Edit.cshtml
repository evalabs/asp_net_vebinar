@model Web.Vebinar.Test.Models.DTO.Auto

@{
    ViewBag.Title = "Edit";
}

<br /><br />
<div class="panel panel-default">
    <div class="panel-body">
        <form method="post" action="/Home/Edit">
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="form-group">
                <label>Название</label>
                <input class="form-control" name="name" value="@Model.Name" />
            </div>
            <div class="form-group">
                <label>Год</label>
                <input type="number" class="form-control" name="year" value="@Model.Year" />
            </div>
            <div class="form-group">
                <label>Цена</label>
                <input type="number" class="form-control" name="price" value="@Model.Price" />
            </div>
            <input type="submit" class="btn btn-default" value="Сохранить" />
            <span>&nbsp;</span>
            <a href="/" class="btn btn-default">Отмена</a>
        </form>
    </div>
</div>

